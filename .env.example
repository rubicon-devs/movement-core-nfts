# Database - Use a PostgreSQL database (Vercel Postgres, Supabase, etc.)
DATABASE_URL="postgresql://user:password@localhost:5432/movement_collections"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-generate-with-openssl-rand-base64-32"

# Discord OAuth2 - Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# Discord Server and Role Configuration
DISCORD_GUILD_ID="your-discord-server-id"
# Comma-separated list of role IDs that can submit/vote
ALLOWED_ROLE_IDS="role-id-1,role-id-2,role-id-3"

# Admin Discord IDs (comma-separated) - These users can access admin panel
ADMIN_DISCORD_IDS="your-discord-id,another-admin-id"

# Tradeport API - Get from https://www.tradeport.xyz/docs/nft-data-api/overview
TRADEPORT_API_KEY="your-tradeport-api-key"

# Pusher - For real-time updates (https://pusher.com)
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="your-pusher-cluster"
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
NEXT_PUBLIC_PUSHER_CLUSTER="your-pusher-cluster"
